{
  "entry": {
    "styles": [
      "src/scss/wp_login_styles.scss",
      "src/scss/main.scss",
      "src/scss/icon-moon.css"
    ],
    "js": [
      "src/js/main.js",
      "src/js/sliders/sliders-homepage.js",
      "src/js/galleries.js",
      "src/js/map.js"
    ]
  },
  "publicPath": "app/static",
  "globalResources": {
    "styles": "src/scss/**/*.scss",
    "js": "src/js/**/*.js",
    "images": "src/images/**/*.{jpg,jpeg,png,svg,ico}",
    "php": "**/*.php"
  },
  "proxy": "http://start-theme.local/",
  "ignoreFolders": [
    "src/**/*",
    "!src/config.json",
    "!src/{images,js,scss,build}",
    "!src/{images,js,scss,build}/**/*"
  ],
  "compressFolder": [
    "**/*",
    "**/.*",
    ".*",
    "!node_modules{,/**}",
    "!vendor{,/**}",
    "!bundled{,/**}",
    "!package-lock.json",
    "!*.lock",
    "!*.log"
  ]
}
